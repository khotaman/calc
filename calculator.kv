#:kivy 1.9.0


# Custom button
<CustButton@Button>:
    font_size: 32
  
# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 5
    padding: 10
    spacing: 10
    
 
     
  
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            halign: 'right'
            valign: 'center'
            font_size: 65
  
    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
            background_color: app.color_list[0]
        CustButton:
            text: "8"
            on_press: entry.text += self.text
            background_color: app.color_list[1]
        CustButton:
            text: "9"
            on_press: entry.text += self.text
            background_color: app.color_list[2]
        CustButton:
            text: "+"
            on_press: entry.text += self.text
            background_color: app.color_list[3]
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
            background_color: app.color_list[4]
        CustButton:
            text: "5"
            on_press: entry.text += self.text
            background_color: app.color_list[5]
        CustButton:
            text: "6"
            on_press: entry.text += self.text
            background_color: app.color_list[6]
        CustButton:
            text: "-"
            on_press: entry.text += self.text
            background_color: app.color_list[7]
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
            background_color: app.color_list[8]
        CustButton:
            text: "2"
            on_press: entry.text += self.text
            background_color: app.color_list[9]
        CustButton:
            text: "3"
            on_press: entry.text += self.text
            background_color: app.color_list[10]
        CustButton:
            text: "*"
            on_press: entry.text += self.text
            background_color: app.color_list[11]
  
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: entry.text = ""
            background_color: app.color_list[12]
        CustButton:
            text: "0"
            on_press: entry.text += self.text
            background_color: app.color_list[13]
        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text)
            background_color: app.color_list[14]
        CustButton:
            text: "/"
            on_press: entry.text += self.text
            background_color: app.color_list[15]
    